<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Tên sản phẩm -->
        <TextView
            android:id="@+id/tvProductName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên sản phẩm"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Mã QR -->
        <TextView
            android:id="@+id/tvQrCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mã: 123456"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <!-- Số lượng -->
        <TextView
            android:id="@+id/tvQuantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Số lượng: 10"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <!-- Chi tiết -->
        <TextView
            android:id="@+id/tvDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chi tiết: Chi tiết sản phẩm"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <!-- Danh mục -->
        <TextView
            android:id="@+id/tvCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Danh mục: Danh mục 1"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <!-- Giá nhập -->
        <TextView
            android:id="@+id/tvImportPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Giá nhập: 100.000"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <!-- Giá xuất -->
        <TextView
            android:id="@+id/tvExportPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Giá xuất: 150.000"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <!-- Ngày nhập -->
        <TextView
            android:id="@+id/tvImportDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ngày nhập: 01/01/2023"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <!-- Ngày xuất -->
        <TextView
            android:id="@+id/tvExportDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ngày xuất: 01/02/2023"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <!-- Hạn sử dụng -->
        <TextView
            android:id="@+id/tvExpiryDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hạn sử dụng: 01/12/2023"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>