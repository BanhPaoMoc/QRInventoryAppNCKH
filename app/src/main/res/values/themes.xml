<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Base.Theme.QR_Inventory_App" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/orange</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Màu nền -->
        <item name="android:colorBackground">@color/blackslate</item>
        <item name="android:statusBarColor">@color/blackslate</item>

        <!-- Màu text -->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/gray</item>

        <!-- Kích thước chữ mặc định -->
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Theme.QR_Inventory_App" parent="Base.Theme.QR_Inventory_App" />

    <!-- Style cho nút trắng, viền xám, chữ đen -->
    <style name="OutlinedButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:background">@drawable/outline_button</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Style cho nút cam, không viền, chữ trắng -->
    <style name="FilledButton" parent="Widget.Material3.Button">
        <item name="android:background">@drawable/custom_button</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>
